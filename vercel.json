{
  "version": 2,
  "name": "multi-omics-pharmacogenomics-platform",
  "builds": [
    { "src": "frontend/**", "use": "@vercel/static" },
    { "src": "api/**/*.py", "use": "@vercel/python" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/frontend/$1" }
  ],
  "functions": {
    "api/**/*.py": { "runtime": "python3.9" }
  },
  "env": {
    "ENVIRONMENT": "production"
  }
}
